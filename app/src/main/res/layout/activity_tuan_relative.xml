<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ts_20sp">

    <EditText
        android:id="@+id/tuan_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border_login"
        android:gravity="center"
        android:hint="@string/hint_enter_id"
        android:maxLength="100"
        android:padding="@dimen/di_10dp"
        android:textSize="@dimen/ts_20sp"/>

    <EditText
        android:id="@+id/tuan_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border_login"
        android:layout_marginTop="@dimen/di_10dp"
        android:gravity="center"
        android:hint="@string/hint_enter_pass"
        android:maxLength="100"
        android:padding="@dimen/di_10dp"
        android:textSize="@dimen/ts_20sp"
        android:layout_below="@id/tuan_text_input" />

    <Button
        android:id="@+id/tuan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/di_20dp"
        android:layout_centerInParent="true"
        android:text="@string/button_tuan"
        android:textColor="@color/white"
        android:layout_below="@id/tuan_password" />

</RelativeLayout>