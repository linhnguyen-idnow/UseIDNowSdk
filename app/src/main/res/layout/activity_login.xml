<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/ts_20sp">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/di_50dp"
        android:src="@drawable/icon_placeholder"></ImageView>

    <EditText
        android:id="@+id/login_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/di_50dp"
        android:background="@drawable/input_border_login"
        android:gravity="center"
        android:hint="@string/hint_enter_id"
        android:maxLength="9"
        android:padding="@dimen/di_10dp"
        android:textSize="@dimen/ts_20sp" />

    <Button
        android:id="@+id/buttonStartVideoIdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/di_30dp"
        android:background="@drawable/btn_border_login_selector"
        android:fontFamily="@fon"
        android:text="@string/confirm"
        android:textColor="@color/white" />
</LinearLayout>
